<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>

<VBox fx:id="root" 
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.eduverseclient.controller.MyCourseCardController"
      styleClass="my-course-card"
      spacing="10">
    
    <!-- Thumbnail -->
    <ImageView fx:id="thumbnailImage"
               fitWidth="280"
               fitHeight="157"
               preserveRatio="true"
               styleClass="course-thumbnail">
        <VBox.margin>
            <Insets bottom="5"/>
        </VBox.margin>
    </ImageView>
    
    <!-- Content -->
    <VBox spacing="8" styleClass="course-content">
        <!-- Title -->
        <Label fx:id="titleLabel" 
               styleClass="course-title"
               wrapText="true"
               maxWidth="280"/>
        
        <!-- Teacher Name -->
        <Label fx:id="teacherLabel" 
               styleClass="course-teacher"/>
        
        <!-- Progress Section -->
        <VBox spacing="5" styleClass="progress-section">
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="progressLabel" styleClass="progress-text"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="progressPercentLabel" styleClass="progress-percent"/>
            </HBox>
            <ProgressBar fx:id="progressBar" 
                        styleClass="course-progress-bar"
                        maxWidth="280"/>
            <Label fx:id="lessonsInfoLabel" styleClass="lessons-info"/>
        </VBox>
        
        <!-- Action Button -->
        <Button fx:id="continueButton"
                text="Continue Learning"
                onAction="#handleContinue"
                styleClass="course-action-button button-continue"
                maxWidth="280"/>
    </VBox>

    <stylesheets>
        <URL value="@../styles/course-dashboard.css"/>
    </stylesheets>
</VBox>
