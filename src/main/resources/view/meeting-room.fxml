                </HBox>
            </VBox>

            <!-- RIGHT: Chat + Participants -->
            <VBox spacing="10" prefWidth="350" style="-fx-background-color: #2C2C2C; -fx-padding: 10; -fx-background-radius: 10;">

                <!-- Tab Pane: Chat | Participants -->
                <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS"
                         style="-fx-background-color: #2C2C2C;">

                    <!-- Tab 1: Chat -->
                    <Tab text="ðŸ’¬ Chat">
                        <VBox spacing="10" style="-fx-padding: 10;">

                            <!-- Chat Messages -->
                            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                                        style="-fx-background-color: #1E1E1E; -fx-background-radius: 5;">
