<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.eduverseclient.controller.CreateExamDialogController"
      spacing="15"
      style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Tạo Bài Thi Mới" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <Separator/>

    <Label text="Tiêu đề:"/>
    <TextField fx:id="titleField" promptText="Nhập tiêu đề bài thi"/>

    <Label text="Mô tả:"/>
    <TextArea fx:id="descriptionArea" promptText="Nhập mô tả bài thi (tùy chọn)" 
              prefRowCount="3" wrapText="true"/>

    <HBox spacing="15">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Ngày thi:"/>
            <DatePicker fx:id="datePicker"/>
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Giờ thi (HH:mm):"/>
            <TextField fx:id="timeField" promptText="14:30"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Thời lượng (phút):"/>
            <Spinner fx:id="durationSpinner" prefWidth="100"/>
        </VBox>
    </HBox>

    <Separator/>

    <Label text="Câu hỏi:" style="-fx-font-weight: bold;"/>
    <ScrollPane fx:id="questionsScrollPane" prefHeight="200" fitToWidth="true">
        <VBox fx:id="questionsContainer" spacing="10" style="-fx-padding: 10;"/>
    </ScrollPane>
    <Button text="➕ Thêm câu hỏi" onAction="#handleAddQuestion"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Hủy" onAction="#handleCancel"
                style="-fx-background-color: #757575; -fx-text-fill: white;"/>
        <Button text="Tạo" onAction="#handleCreate"
                style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>
    </HBox>

</VBox>

